{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "name": "api-server:test launch server",
          "request": "launch",
          "runtimeArgs": [
              "-r",
              "ts-node/register"
          ],
          "env": {
            "PORT": "3005",
            "TS_NODE_LOG_ERROR": "1",
            "LOG_NAME": "api-server",
            "LOG_DST": "/tmp/api-server.txt",
            "LOG_LEVEL": "debug"
          },
          "args": [
              "${workspaceFolder}/src/start.ts"
          ]
      },
      "args": ["${workspaceFolder}/src/start.ts"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "api-server:test file",
      "program": "${workspaceFolder:api-server}/lib/${fileBasenameNoExtension}.js",
      "cwd": "${workspaceFolder:api-server}",
      "sourceMaps": true,
      "smartStep": true,
      "preLaunchTask": "build",
      "outFiles": ["${workspaceFolder:api-server}/lib/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "api-server:debug test",
      "program": "${workspaceFolder:api-server}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder:api-server}",
      "args": ["--runInBand"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "api-server:debug test file",
      "program": "${workspaceFolder:api-server}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder:api-server}",
      "args": ["--runInBand", "${relativeFile}", "-u"],
      "env": { "LOG_DST": "/tmp/api-server.txt" }
    }
  ]
}
